/* pages/forum/index.wxss */
page {
  background: #f2f2f2;
}

.content-wrap {
  width: 100%;
  border-radius: 10px;
  height: 120px;
  background: #fff;
  font-size: 18px;
  text-align: left;
  margin-bottom: 10px;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  display: grid;
  place-content: center start;
}

.content {
  color: #fff;
  z-index: 2;
  padding: 0px 20px;
  text-shadow: 0px 1px 1px #333;
}