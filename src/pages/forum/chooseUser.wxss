/* pages/forum/chooseUser.wxss */
.emptyUser {
  width: 100%;
  height: 120rpx;
}
.userStyle {
  width: 100%;
  height: 100%;
}
.userItem {
  width: 720rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 5px 5px 5px 5px;
  justify-content: start;
  border-radius: 4px;
  /* border: 1px solid #302022; */
  box-shadow: 0px 0px 10px 0px rgba(110, 95, 95, 0.1);
}
.userItem image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
  margin-left: 10rpx;
}
.userItem text {
  font-size: 16px;
  width: auto;
}

.py {
  box-sizing: border-box;
  background: #f5f5f5;
  font-size: 23rpx;
  color: #aaa;
  padding: 10rpx 25rpx;
}

.fullname {
  box-sizing: border-box;
  font-size: 30rpx;
  color: #555;
  padding: 25rpx;
  border-bottom: 1rpx solid #eee;
}
/* 搜索 */

.search-bar {
  width: 100%;
  height: 110rpx;
  line-height: 100rpx;
  top: 0;
  box-sizing: border-box;
  overflow: hidden;
  padding: 20rpx;
  position: relative;

}

.search-row {
  display: flex;
  align-items: center;
}

.search-row text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 40rpx;
  color: rgba(20, 20, 20, 1);
  opacity: 1;
  margin-left: 30rpx;
}

.input-box {
  height: 62rpx;
  /* background: #f5f5f5; */
  opacity: 1;
  border-radius: 32rpx;
  padding: 5rpx 10rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  flex: 1;
  border: 1rpx solid rgb(73, 157, 235);
}

.input-box image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

.input-box input {
  flex: 1;
  height: 62rpx;
}

.itemBox {
  border-bottom: 1rpx solid rgb(241, 239, 239);
  padding: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
  left: 30rpx;
  color: #333333;
}

.itemBox:last-child {
  border-bottom: none;
}
.ative {
  color: rgb(76, 156, 221);
}
