/* pages/members/members.wxss */
.member-item {
  border: 1px solid #e4e7ed;
  margin-bottom: -1px;
  font-size: 12px;
  padding: 5px;
}
.member-item .avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: #F1F3F6;
  margin-right: 10px;
}
.member-item .avatar image {
  width: 30px;
  height: 30px;
}
.member-item .info {
  height: 30px;
}
.member-item .btns {
  float: right;
  line-height: 30px;
}
.member-item .btn {
  padding: 0 5px;
  color: #8fc3ff;
  cursor: pointer;
}
.member-item .openid {
  font-size: 8px;
}